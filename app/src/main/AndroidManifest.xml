<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.danny.chat">

    <application
        android:name=".presentation.ChatApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"

        android:theme="@style/Theme.RealtimeChat">
        <activity
            android:name=".presentation.activity.NameActivity"
            android:noHistory="true" />
        <activity android:name=".presentation.activity.ChatActivity"
            android:windowSoftInputMode="adjustPan|stateHidden|stateAlwaysHidden|stateVisible"/>
        <activity android:name=".presentation.activity.UserActivity" />
        <activity
            android:name=".presentation.activity.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>